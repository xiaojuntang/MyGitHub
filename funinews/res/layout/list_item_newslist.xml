<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#f1f0ee"
    android:padding="5dip" >

    <!-- ListView最左边的缩略图  android:background="@drawable/houseimage_border_bj"-->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        
        android:padding="3dip" >

        <ImageView
            android:id="@+id/new_image"
            android:layout_width="75dip"
            android:layout_height="60dip"
            android:contentDescription="@string/imagedec"
            android:scaleType="fitXY"
             />
    </LinearLayout>

    <!-- 新闻标题 -->

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="唉，网络的诱惑有那么大吗？"
        android:textColor="#282928"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- 新闻简介-->

    <TextView
        android:id="@+id/text_intr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:lineSpacingMultiplier="1.2"
        android:text="土资源部副部长、不动产统一登记工作领导小组组长胡存智出席不动产统一登记专家座谈会"
        android:textColor="#A8A49F"
        android:textSize="10dip" />

    <!-- 评论数据 -->

    <TextView
        android:id="@+id/text_review"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_intr"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
       android:gravity="right"
        android:text="4318评"
        android:textColor="#A8A49F"
        android:textSize="10dip" />

</RelativeLayout>