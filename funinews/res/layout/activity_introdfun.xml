<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/i_layout_first"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@drawable/mi_bottombg"
        android:gravity="center_vertical" >

        <TextView
            style="@style/SupportChangeFont"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="96.0dip"
            android:paddingRight="96.0dip"
            android:shadowColor="@color/version_check_txt_shadowcolor"
            android:shadowDy="-1.0"
            android:shadowRadius="0.2"
            android:singleLine="true"
            android:text="@string/title_funntroduction"
            android:textColor="@color/white"
            android:textSize="19.0sp" />

        <include layout="@layout/user_layout_btnback" />

        <Button
            android:id="@+id/titlebar_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14.0dip"
            android:background="@drawable/titlebar_btn_refresh_selector" />

        <ProgressBar
            android:id="@+id/loadnews_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:clickable="false"
            android:visibility="gone" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webview_introdfun"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/i_layout_first" />

</RelativeLayout>